<?xml version="1.0"?>
<component name="test-authchain-dummy-anonymous">

  <extension target="org.nuxeo.ecm.platform.ui.web.auth.service.PluggableAuthenticationService" point="chain">
    <authenticationChain>
      <plugins>
        <plugin>DUMMY_AUTH_ANONYMOUS</plugin>
      </plugins>
    </authenticationChain>
  </extension>

  <extension target="org.nuxeo.ecm.platform.ui.web.auth.service.PluggableAuthenticationService" point="authenticators">
    <authenticationPlugin name="DUMMY_AUTH_ANONYMOUS"
      class="org.nuxeo.ecm.platform.ui.web.auth.DummyAuthenticationPluginAnonymous">
      <loginModulePlugin>Trusting_LM</loginModulePlugin>
    </authenticationPlugin>
  </extension>

  <extension target="org.nuxeo.ecm.platform.login.LoginPluginRegistry" point="plugin">
    <LoginPlugin name="Trusting_LM" class="org.nuxeo.ecm.platform.login.TrustingLoginPlugin">
      <enabled>true</enabled>
    </LoginPlugin>
  </extension>

  <extension target="org.nuxeo.runtime.LoginComponent" point="domains">
    <domain name="nuxeo-ecm-web">
      <login-module code="org.nuxeo.ecm.platform.ui.web.auth.DummyLoginModule" flag="required">
      </login-module>
    </domain>
  </extension>

</component>
